<%= form_for(@message) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2">投稿者名:</div>
    <div class="col-sm-10">
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-2">メッセージ内容:</div>
    <div class="col-sm-7">
      <%= f.text_area :body, :size => "50%" %>
    </div>
    <div class="col-sm-3">
      <%= f.submit class: "btn btn-danger" %>
    </div>
  </div>
</div>
<% end %>